{
  "name": "blockchain-backend",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "8.11.2",
    "npm": "^5.6.0"
  },
  "scripts": {
    "tsc": "./node_modules/.bin/tsc",
    "start": "./node_modules/.bin/babel-node build/src/server.js",
    "test": "./node_modules/.bin/jest",
    "test-coverage": "./node_modules/.bin/jest --coverage",
    "build": "bash build.sh",
    "bs": "npm run build && npm start",
    "dev": "ts-node-dev src/server.ts"
  },
  "dependencies": {
    "@types/node": "^10.11.4",
    "@types/uuid": "^3.4.4",
    "app-root-path": "^2.1.0",
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "bluemix-autoscaling-agent": "^1.0.13",
    "body-parser": "^1.18.2",
    "bytebuffer": "^5.0.1",
    "cfenv": "^1.1.0",
    "compression": "^1.7.2",
    "dotenv": "^5.0.1",
    "express": "~4.16.0",
    "fabric-ca-client": "1.3.0",
    "fabric-client": "1.3.0",
    "helmet": "^3.12.0",
    "http": "0.0.0",
    "inversify": "^5.0.1",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "jsonwebtoken": "^8.3.0",
    "nano": "7.1.0",
    "reflect-metadata": "^0.1.12",
    "request": "^2.87.0",
    "typescript": "^3.0.3",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/bytebuffer": "^5.0.37",
    "@types/compression": "0.0.36",
    "@types/dotenv": "^4.0.3",
    "@types/es6-shim": "^0.31.37",
    "@types/express": "^4.16.0",
    "@types/express-jwt": "0.0.40",
    "@types/helmet": "0.0.40",
    "@types/jest": "^23.3.2",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/promise": "^7.1.30",
    "@types/socket.io": "^1.4.38",
    "chai": "^4.1.2",
    "mocha": "^5.1.1",
    "nyc": "^11.7.3",
    "standard": "^11.0.1",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0"
  },
  "standard": {
    "globals": [
      "it",
      "describe"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "src/*.{ts,js}"
    ],
    "coveragePathIgnorePatterns": [
      "src/config/*",
      "src/router/*",
      "src/model/enum/*"
    ]
  }
}
